<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../public/css/styles.css">
    <link rel="stylesheet" href="../public/css/agregaPregunta.css">
    <script>
        // Función para mostrar el popup con el mensaje
        function showPopup(message) {
            document.getElementById('popup-message').innerText = message;
            document.getElementById('popup').style.display = 'flex';
        }

        // Función para cerrar el popup
        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }

        // Mostrar mensajes al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            // Verificar si hay un mensaje de éxito
            {{#success}}
                showPopup("{{success}}");
            {{/success}}

            // Verificar si hay un mensaje de error
            {{#error}}
                showPopup("{{error}}");
            {{/error}}
        });
    </script>
</head>

<body>
<main>
    <div class="popup-overlay" id="popup">
        <div class="popup-content" id="popup-content">
            <h2 id="popup-message"></h2>
            <div class="popup-buttons">
                <button id="close-popup-btn" onclick="closePopup()">Cerrar</button>
            </div>
        </div>
    </div>
    <div class="cont-form">
        <h2>AGREGAR PREGUNTA</h2>
        <form method="POST" action="/editor/agregarPregunta">
            <select name="categoria" id="" required>
                <option disabled selected>Seleccionar una categoria</option>
                <option value="Ciencia">Ciencia</option>
                <option value="Matemáticas">Matemáticas</option>
                <option value="Cultura General">Cultura General</option>
                <option value="Geografía">Geografía</option>
                <option value="Historia">Historia</option>
                <option value="Deportes">Deportes</option>
                <option value="Arte">Arte</option>
            </select>

            <input type="text" name="pregunta" id="" placeholder="Ingresar Pregunta" required>
            <input type="text" name="correcta" id="" placeholder="Ingresar opcion correcta" required>
            <input type="text" name="opcion2" id="" placeholder="Ingresar opcion 2" required>
            <input type="text" name="opcion3" id="" placeholder="Ingresar opcion 3" required>
            <input type="text" name="opcion4" id="" placeholder="Ingresar opcion 4" required>

            <select name="dificultad" id="" required>
                <option disabled selected>Selecciona una dificultad</option>
                <option value="Facil">Facil</option>
                <option value="Intermedio">Intermedio</option>
                <option value="Dificil">Dificil</option>
            </select>

            <button type="submit">GUARDAR</button>
                <!--            {{#error}}-->
            <!--                <p style="color: red">{{error}}</p>-->
                <!--            {{/error}}-->
                <!--            {{#success}}-->
            <!--                <p style="color: green">{{success}}</p>-->
                <!--            {{/success}}-->
            <a href="/../usuario/lobby">VOLVER</a>
        </form>
    </div>
</main>

</body>

</html>